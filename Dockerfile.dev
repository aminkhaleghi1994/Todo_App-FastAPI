# استفاده از تصویر پایه Python رسمی
FROM python:3.11-slim

# تنظیم متغیرهای محیطی
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONHASHSEED=random \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# ایجاد کاربر غیر root برای امنیت
RUN groupadd -r appuser && useradd -r -g appuser appuser

# تنظیم دایرکتوری کاری
WORKDIR /app

# نصب وابستگی‌های سیستم (در صورت نیاز)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# کپی فایل requirements و نصب وابستگی‌ها
COPY requirements.txt .
RUN pip install -i https://mirror-pypi.runflare.com/simple --no-cache-dir --upgrade pip && \
    pip install -i https://mirror-pypi.runflare.com/simple --no-cache-dir -r requirements.txt

# کپی کل پروژه
COPY . .

# ایجاد پوشه‌های مورد نیاز
RUN mkdir -p /app/data && \
    chown -R appuser:appuser /app

# تغییر به کاربر غیر root
USER appuser

# باز کردن پورت
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/health', timeout=10)"

# دستور اجرای اپلیکیشن
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
